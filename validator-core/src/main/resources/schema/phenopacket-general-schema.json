{
  "$schema": "https://json-schema.org/draft/2019-09/schema#",
  "title": "Phenopacket",
  "description": "General requirments for any GA4GH Phenopacket",
  "type": "object",
  "properties": {
    "id": {
      "description": "The unique identifier for the Phenopacket",
      "type": "string"
    },
    "subject": {
      "type": "object",
      "properties": {
        "id": {
          "description": "An arbitrary identifier for the subject of the Phenopacket",
          "type": "string"
        },
        "alternate_ids": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "__comment":"# TODO CURIE not PLAIN STRING????...",
          "minItems": 0,
          "uniqueItems": true
        }
        },
        "date_of_birth": {
          "type": "string",
          "__comment":"# TODO timestamp not PLAIN STRING????..."
        }
      },
      "required": [ "id"]
  },
  "phenotypicFeatures" : {
    "type": "array",
    "items": {
      "type": "phenotypicFeature"
    },
    "minItems": 1
  },
  "required": ["id", "metaData"],
  "additionalProperties": false,
  "$defs": {
      "ontologyClass": {
        "type": "object",
        "properties": {
          "id": {
            "description": "a CURIE-style identifier e.g. HP:0001875.",
            "type": "string"
          },
          "label": {
            "description": "human-readable, class name",
            "type": "string"
          }
        }
      },
    "phenotypicFeature": {
      "type": "object",
      "properties": {
        "description": "string",
        "type": {
          "$ref": "#/$defs/ontologyClass"
        },
        "excluded": "boolean",
        "severity": {
          "$ref": "#/$defs/ontologyClass"
        },
        "modifiers": {
          "type": "array",
          "items": {
            "type": {
              "$ref": "#/$defs/ontologyClass"
            }
          }
        }
      },
      "required": ["type"],
        "__comment":"# TODO onset, evidence, etc."
      },
    "age": {
      "type": "object",
      "properties": {
        "iso8601duration": {
          "description": "An ISO8601 string representing age.",
          "type": "string"
        },
        "required": [ "iso8601duration"]
      }
    },
    "ageRange": {
      "type": "object",
      "properties": {
        "start": {
          "type": "age"
        },
        "end": {
          "type": "age"
        }
        }
       }
  }
}